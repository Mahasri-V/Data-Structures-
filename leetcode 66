class Solution {
    public int[] plusOne(int[] digits) {
        int n = digits.length;
        int k = n-1;
        while(digits[k] == 9){
            digits[k] = 0;
            if(k == 0){
                int[] ans = new int[n+1];
                ans[0] = 1;
                return ans;
            }
            k--;
        }
        digits[k] = digits[k] + 1;
        return digits;
    }
}
